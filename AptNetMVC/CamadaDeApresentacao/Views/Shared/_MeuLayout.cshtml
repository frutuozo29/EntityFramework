

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Usando dessa forma funciona -->
    @Styles.Render("~/Content/css")    
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <img src="http://www.k19.com.br/css/img/main-header-logo.png"
             alt="Logo vertical Frutuozo" title="Frutuozo Treinamentos" />
        <span>Frutuozo Treinamentos</span>
    </header>
    <div id="toolbar">
        @if (IsSectionDefined("Toolbar"))
        {
            @RenderSection("Toolbar", required: false)
        }
        else
        {
            <input type="button"
                   value="Veja seu número da sorte."
                   onclick="location.href='/Home/Index'" />
        }
    </div>

    <section id="main">
        @RenderBody()
    </section>

    <footer>&copy;Frutuozo Treinamentos</footer>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>

</html>
